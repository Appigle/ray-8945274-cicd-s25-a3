{
  "name": "cicd-azure-functions",
  "version": "1.0.0",
  "description": "Jenkins CI/CD Pipeline for Azure Functions",
  "main": "src/functions/*.js",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "start": "func start",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build": "echo 'Build completed'",
    "deploy": "echo 'Deploy completed'"
  },
  "dependencies": {
    "@azure/functions": "^4.0.0"
  },
  "devDependencies": {
    "azure-functions-core-tools": "^4.x",
    "jest": "^29.0.0",
    "supertest": "^6.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**"
    ]
  }
}